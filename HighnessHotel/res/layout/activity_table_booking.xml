<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wbg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.highness.TableBooking" >

    <EditText
        android:id="@+id/tblpersonnum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Number of persons"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/tbldate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tblpersonnum"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Date"
        android:inputType="date" />

    <TextView
        android:id="@+id/lower1"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/lower2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#01dfa5" />

    <EditText
        android:id="@+id/tbltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tbldate"
        android:layout_alignRight="@+id/tbldate"
        android:layout_below="@+id/tbldate"
        android:ems="10"
        android:inputType="time"
        android:hint="Time"
         />

    <Button
        android:id="@+id/tblbuk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tbltime"
        android:layout_below="@+id/tbltime"
        android:layout_marginTop="59dp"
        android:text="Book" />

    <TextView
        android:id="@+id/tblmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tbltime"
        android:layout_below="@+id/tbltime"
        android:layout_margin="10dp"
        android:layout_marginTop="17dp"
        android:clickable="true"
        android:linksClickable="true"
        android:onClick="goToSo"
        android:text="Check Menu"
        android:textSize="15dp" />

</RelativeLayout>