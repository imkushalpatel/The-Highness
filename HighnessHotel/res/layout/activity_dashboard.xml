<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/wbg"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.highness.MainActivity" >
 <ImageView
        android:id="@+id/home"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/home" />
    
     <ImageView 
         android:id="@+id/slogon"
         android:layout_below="@id/home"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
         android:src="@drawable/slogon"/>

    <ImageView
        android:id="@+id/tblbtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/slogon"
        android:clickable="true"
        android:src="@drawable/tablen"
        
         />

    <ImageView
        android:id="@+id/roombtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tblbtn"
        android:clickable="true"
        android:src="@drawable/roomn" />

    <ImageView
        android:id="@+id/eventbtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/roombtn"
        android:clickable="true"
        android:src="@drawable/eventn" />

    <ImageView
        android:id="@+id/hallbtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/eventbtn"
        android:clickable="true"
        android:src="@drawable/halln"
        
         />

    <TextView
        android:id="@+id/lower1"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/lower2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#01dfa5" />

</RelativeLayout>
